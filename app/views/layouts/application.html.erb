<!DOCTYPE html>
<html>
<head>
  <title>  <%= yield :title %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="landing">

	<% if alert %>
		<div class="error">
			<div style="margin-right:20px" class="close ex"> x </div>
			<p> <%= alert %> </p>
		</div>
	<% end %>

	<% if notice %>
		<div class="notice">
			<div style="margin-right:20px" class="close ex"> x </div>
			<p> <%= notice %> </p>
		</div>
	<% end %>

	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span12">
				<%= yield %>
			</div>
		</div>
	</div>

</body>
</html>
