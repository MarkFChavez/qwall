@import 'bootstrap';
@import 'bootstrap-responsive';

.line {
	border: 0;
	height: 1px;
	background: #333;
	background-image: -webkit-linear-gradient(left,#CCC,#333,#CCC);
	background-image: -moz-linear-gradient(left,#CCC,#333,#CCC);
	background-image: -ms-linear-gradient(left,#CCC,#333,#CCC);
	background-image: -o-linear-gradient(left,#CCC,#333,#CCC);
}

.user-block {
	padding:5px;
	margin-bottom:5px;
}

.post-header {
	padding:5px;
	height:20px;
}

.post-content {
	padding:5px;
	font-size:12px;
}

.red {
	background-color: #D75222;
	color: #FFF;
}

.green {
	background-color: #00AC65;
	color: #FFF;
}

.blue {
	background-color: #068894;
	color: #FFF;
}

.post-block {
    width: 200px;
    float: left;
    margin: 5px;
    cursor:pointer;
}

.post-block.w2 {
    width: 300px;
}

.post-block.h2 {
    height: 200px;
}