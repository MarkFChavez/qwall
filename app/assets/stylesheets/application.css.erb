 * {
 	font-family: Verdana;
 }

 body.landing {
 	background: url("<%= asset_path 'bg_main.jpg' %>") no-repeat center center fixed;
 	background-size: 100%;
 }

 .textfield {
 	cursor:pointer;
 	letter-spacing:3px;
 }

 .error {
 	position: fixed;
 	background-color: red;
 	padding: 5px;
 	width: 100%;
 	height: 100px;
 }

 .error p {
 	margin-top: 40px;
 	text-align: center;
 	font-size:16px;
 	color: #FFF;
 }

 .notice {
 	position: fixed;
 	background-color: green;
 	padding: 5px;
 	width: 100%;
 	height: 100px;
 }

 .notice p {
 	margin-top: 40px;
 	text-align: center;
 	font-size:16px;
 	color: #FFF;
 }